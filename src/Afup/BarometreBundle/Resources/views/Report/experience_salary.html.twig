<table class="table table-striped highchart tablesorter"
       data-graph-container-before="1"
       data-graph-type="column"
       data-graph-legend-disabled="1">
    <thead>
        <tr>
            <th>{{ 'report.view.experience' | trans }}</th>
            <th data-graph-skip="1">{{ 'report.view.response_number' | trans }}</th>
            <th>{{ "report.view.annual_salary" | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for row in results %}
            <tr>
                <td>{{ row.experience|enum_label('experience') }}</td>
                <td class="text-right">{{ row.nbResponse }}</td>
                <td class="text-right">{{ row.annualSalary|round(-2)|number_format_decimal }}</td>
             </tr>
        {% endfor %}
    </tbody>
</table>
