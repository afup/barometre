<table class="bar-table highchart"
       data-graph-container-before="1"
       data-graph-type="column"
       data-graph-legend-disabled="1">
    <thead>
        <tr>
            <th>{{ "report.view.company_type" | trans }}</th>
            <th>{{ "report.view.response_number" | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for row in results %}
            <tr>
                <td>{{ row.companyType|enum_label('company_type') }}</td>
                <td>{{ row.count }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
