{% extends '::base.html.twig' %}

{% block title %}Distribution des tailles d'entreprises - Baromètre AFUP{% endblock %}

{% block body %}
{{ render(controller('AfupBarometreBundle:Filters:index')) }}

<div class="report-title">Distribution des tailles d'entreprises.</div>

<table class="bar-table">
<thead>
  <tr>
    <td>Taille d'entreprise</td>
    <td>Nombre de réponses</td>
  </tr>
</thead>
<tbody>
{% for row in results %}
  <tr>
    <td>{{ row.companySize|enum_label('company_size') }}</td>
    <td>{{ row.count }}</td>
  </tr>
{% endfor %}
</tbody>
</table>

{% endblock %}
