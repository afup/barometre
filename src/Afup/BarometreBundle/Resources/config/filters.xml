<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="afup.barometre.filter.company_size" class="Afup\Barometre\Filter\CompanySizeFilter">
            <argument type="service" id="afup.barometre.enums.company_size" />
            <tag name="barometre.filter" alias="company_size"/>
        </service>

        <service id="afup.barometre.filter.company_type" class="Afup\Barometre\Filter\CompanyTypeFilter">
            <argument type="service" id="afup.barometre.enums.company_type" />
            <tag name="barometre.filter" alias="company_type"/>
        </service>

        <service id="afup.barometre.filter.php_version" class="Afup\Barometre\Filter\PHPVersionFilter">
            <argument type="service" id="afup.barometre.enums.php_version" />
            <tag name="barometre.filter" alias="php_version" />
        </service>

        <service id="afup.barometre.filter.certifications" class="Afup\Barometre\Filter\CertificationFilter">
            <tag name="barometre.filter" alias="certifications" />
        </service>

        <service id="afup.barometre.filter.specialities" class="Afup\Barometre\Filter\SpecialityFilter">
            <tag name="barometre.filter" alias="specialities" />
        </service>

        <service id="afup.barometre.filter.salary" class="Afup\Barometre\Filter\SalaryFilter">
            <tag name="barometre.filter" alias="salary" />
        </service>

        <service id="afup.barometre.filter.departement" class="Afup\Barometre\Filter\DepartmentFilter">
            <tag name="barometre.filter" alias="departement" />
        </service>

        <service id="afup.barometre.filter.experience" class="Afup\Barometre\Filter\ExperienceFilter">
            <argument type="service" id="afup.barometre.enums.experience" />
            <tag name="barometre.filter" alias="experience" />
        </service>

        <service id="afup.barometre.filter.salary_satisfaction" class="Afup\Barometre\Filter\SalarySatisfactionFilter">
            <argument type="service" id="afup.barometre.enums.salary_satisfaction" />
            <tag name="barometre.filter" alias="salary_satisfaction" />
        </service>

        <service id="afup.barometre.filter.job_title" class="Afup\Barometre\Filter\JobTitleFilter">
            <argument type="service" id="afup.barometre.enums.job_title" />
            <tag name="barometre.filter" alias="job_title" />
        </service>

        <service id="afup.barometre.filter.gender" class="Afup\Barometre\Filter\GenderFilter">
            <argument type="service" id="afup.barometre.enums.gender" />
            <tag name="barometre.filter" alias="gender" />
        </service>

        <service id="afup.barometre.filter.campaign" class="Afup\Barometre\Filter\CampaignFilter">
            <tag name="barometre.filter" alias="job_title" />
        </service>

        <service id="afup.barometre.filter.status" class="Afup\Barometre\Filter\StatusFilter">
            <argument type="service" id="afup.barometre.enums.status" />
            <tag name="barometre.filter" alias="status" />
        </service>
    </services>
</container>
