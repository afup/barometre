<table class="table table-striped highchart tablesorter"
       data-graph-container-before="1"
       data-graph-type="column"
       data-graph-group-padding="0.2"
    >
    <thead>
        <tr>
            <th>{{ "report.view.experience" | trans }}</th>
            {% for companyType in results.columns %}
                <th>{{ companyType|enum_label('App\\Enums\\CompanyTypeEnums') }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for experience, row in results.data %}
            <tr>
                <td>{{ experience|enum_label('App\\Enums\\ExperienceEnums') }}</td>
                {% for companyType in results.columns %}
                    <td class="text-right">
                        {{ row[companyType].annualSalary|default(0)|round(-2) }}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="salary-info">
    *{{ "report.view.info_annual_salary"|trans }}
</div>
